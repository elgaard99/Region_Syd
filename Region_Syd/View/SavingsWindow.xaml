<Window
    x:Class="Region_Syd.View.SavingsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Region_Syd.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="1600"
    Height="800"
    WindowState="Normal"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">
	<Window.Resources>

		<Style x:Key="ColumnHeaderTextStyle"
			   TargetType="TextBlock">
			<Setter Property="Foreground"
					Value="Red" />
			<Setter Property="FontSize"
					Value="18" />
			<Setter Property="TextAlignment"
					Value="Center" />
		</Style>

		<Style x:Key="myControlTemplateStyle"
			   TargetType="{x:Type GridViewColumnHeader}">
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="{x:Type GridViewColumnHeader}">
						<Grid>
							<DockPanel HorizontalAlignment="Center"
									   VerticalAlignment="Center">
								<TextBlock Style="{StaticResource ColumnHeaderTextStyle}"
										   Text="{TemplateBinding Content}" />
							</DockPanel>
						</Grid>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
			<Setter Property="Margin"
					Value="0,0,0,0" />
		</Style>

		<!--  Items i ListView  -->
		<Style TargetType="ListView">
			<Setter Property="FontSize"
					Value="30" />
		</Style>

		<Style TargetType="ListViewItem">
			<Setter Property="HorizontalContentAlignment"
					Value="Center" />
			<Setter Property="BorderBrush"
					Value="Black" />
			<Setter Property="BorderThickness"
					Value="1,1,1,1" />
		</Style>

		<!--  Item Groups i ListView  -->
		<Style x:Key="GroupFormatting"
			   TargetType="{x:Type GroupItem}">
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate>
						<Expander IsExpanded="True">
							<Expander.Header>
								<StackPanel Orientation="Horizontal">
									<TextBlock VerticalAlignment="Bottom"
											   FontSize="22"
											   FontWeight="Bold"
											   Foreground="Gray"
											   Text="{Binding Name}" />
								</StackPanel>
							</Expander.Header>
							<ItemsPresenter />
						</Expander>
					</ControlTemplate>
				</Setter.Value>
			</Setter>

		</Style>

	</Window.Resources>


	<Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="20*" />
            <RowDefinition Height="60*" />
            <RowDefinition Height="20*" />
        </Grid.RowDefinitions>

        <!--  Row 0  -->
        <Rectangle Grid.Row="0" Fill="DarkRed" />
        <TextBlock
            Grid.Row="0"
            Margin="40,0,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            FontSize="40"
            Text="Region Syd" />
        <Button
			x:Name="btnAssignments"
            Grid.Row="0"
            Width="150"
            Height="100"
            Margin="0,0,40,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Content="Opgavebanken"
            FontSize="20"
				Click="btnAssignments_Click" />

        <!--  Row 2  -->
        <Rectangle Grid.Row="2" Fill="DarkRed" />

		<ListView x:Name="lvRegions"
				  Grid.Row="1"
				  Margin="40,0,40,0"
				  ItemsSource="{Binding Regions}">
			<ListView.View>
				<GridView AllowsColumnReorder="False"
						  ColumnHeaderContainerStyle="{StaticResource myControlTemplateStyle}">
					<GridViewColumn Width="200"
						            Header="Region">
						<GridViewColumn.CellTemplate>
							<DataTemplate>
								<TextBlock Text="{Binding DisplayName}"
										   TextAlignment="Left" />
							</DataTemplate>
						</GridViewColumn.CellTemplate>
					</GridViewColumn>

					<GridViewColumn Width="1200"
									Header="Timer sparret">
						<GridViewColumn.CellTemplate>
							<DataTemplate>
								<TextBlock Text="{Binding HoursSaved}"
										   TextAlignment="Center" />
							</DataTemplate>
						</GridViewColumn.CellTemplate>
					</GridViewColumn>

					<GridViewColumn 
									Header="Kilometer sparret">
						<GridViewColumn.CellTemplate>
							<DataTemplate>
								<TextBlock Text="{Binding DistanceSaved}"
										   TextAlignment="Right" />
							</DataTemplate>
						</GridViewColumn.CellTemplate>
					</GridViewColumn>
				</GridView>
			</ListView.View>
		</ListView>



<Window x:Class="Region_Syd.View.AssignmentsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Region_Syd.View"
        mc:Ignorable="d"
        Title="AssignmentsView" Height="800" Width="1600" WindowState="Maximized">

    <Window.Resources>

        <!-- Column Header i ListView -->
        <Style x:Key="myControlTemplateStyle" TargetType="{x:Type GridViewColumnHeader}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type GridViewColumnHeader}">
                        <Grid>
                            <DockPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock Text="{TemplateBinding Content}" FontSize="18" Foreground="DarkBlue" TextAlignment="Center"/>
                            </DockPanel>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Margin" Value="100,0,0,0"/>
        </Style>

        <!-- Items i ListView -->
        <Style TargetType="ListView">
            <Setter Property="FontSize" Value="30"/>
        </Style>


        <!-- Item Groups i ListView -->
        <Style x:Key="GroupFormatting" TargetType="{x:Type GroupItem}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate>
                        <Expander IsExpanded="True">
                            <Expander.Header>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Name}" FontWeight="Bold" Foreground="Gray" FontSize="22" VerticalAlignment="Bottom" />
                                </StackPanel>
                            </Expander.Header>
                            <ItemsPresenter />
                        </Expander>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            
        </Style>

    </Window.Resources>
    
    <Grid>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="20*" />
            <RowDefinition Height="60*"/>
            <RowDefinition Height="20*"/>
        </Grid.RowDefinitions>

        <!-- Row 0 -->
        <Rectangle Grid.Row="0" Fill="DarkRed" />
        <TextBlock Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="40,0,0,0" Text="Region Syd" FontSize="40"/>


        <!-- Row 1 -->
        <ListView Grid.Row="1" x:Name="lvAssignments" Margin="40,0,40,0" ItemsSource="{Binding AllAssignments}">
            <ListView.View>
                <GridView ColumnHeaderContainerStyle="{StaticResource myControlTemplateStyle}" AllowsColumnReorder="False">
                    <GridViewColumn Header="Opgave ID" DisplayMemberBinding="{Binding RegionAssignmentId}"/>
                    <GridViewColumn Header="Fra add." DisplayMemberBinding="{Binding StartAddress}" />
                    <GridViewColumn Header="Til add." DisplayMemberBinding="{Binding EndAddress}" />
                    <GridViewColumn Header="Afhentningstidspunkt" DisplayMemberBinding="{Binding Start}"/>
                    <GridViewColumn Header="Ankomst" DisplayMemberBinding="{Binding Finish}" />
                    <GridViewColumn Header="Opg. Beskrivelse" DisplayMemberBinding="{Binding Description}" />
                    <GridViewColumn Header="Type" DisplayMemberBinding="{Binding AssignmentType}" />
                    <GridViewColumn Header="Til Region" DisplayMemberBinding="{Binding EndRegion}" />
                </GridView>
            </ListView.View>
            <ListView.GroupStyle>
                <GroupStyle ContainerStyle="{StaticResource GroupFormatting}"/>
            </ListView.GroupStyle>
        </ListView>

            
        <!-- Row 2 -->
        <Rectangle Grid.Row="2" Fill="DarkRed" />
        
    </Grid>
</Window>

